page {
  background: #fff;
  height: 100%;
  width: 100%;
}
.store-page { 
width: 100vw;
height: 100vh;
overflow-x: hidden;
overflow-y: auto;
}
::-webkit-scrollbar {
     display: none;
}
.container {
  width: 90%;
  margin:0% 5%;
  height: 100%;
  /* background: #3684FF; */
}

.middle {
  box-shadow: -3px 5px 5px -4px #f1f1f1,3px 5px 5px -4px #f1f1f1;
  width: 100%;
  height:75%;
  padding-top:5%;
  text-align: center;
}

.middle>p {
  color: #ddd;
  font-size: 14px;
  text-align: center;
}
.container>.footer {
  width: 100%;
  height:0;
  margin-top: 20%;
}

.container>.footer>.qrcode {
  border-radius: 6px;
  color: #fff;
  font-size: 14px;
  background: #3684FF;
}

#dialog {
  text-align: center;
}

#user {
  color: #eaeaea;
  display: block;
  text-align: center;
}
