/* pages/home/home.wxss */

page {
  background: #3684FF;
  height: 100%;
  width: 100%;
}

.container {
  background: #3684FF;
  height: 100%;
  width: 100%;
  margin: 0 auto;
}

.status {
  width: 100%;
  height: 10%;
}

.btn {
  width: 100%;
  height: 10%;
  margin-left: 50rpx;
}

.btn>button {
  width: 30%;
  line-height: 60rpx;
  background: #fff;
  color: #000;
  font-size: 12px;
  border-radius: 20rpx;
  display: inline-block;
}

.status>.online {
  display: inline-block;
  width: 10%;
  height: 10%;
  font-size: 12px;
  color: #ddd;
}

.status>span {
  margin-top: 10rpx;
  margin-left: 75%;
  color: #ddd;
  display: inline-block;
  width: 10%;
  font-size: 12px;
}

.onimg {
  margin-top: 40%;
  text-align: center;
  margin-bottom: 10%;
}

.onimg>.ava_img {
  width: 200rpx;
  height: 200rpx;
}
.onimg>button {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  background: #ddd;
}
.onimg>button>span {
  line-height: 200rpx;
}